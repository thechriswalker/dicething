{
	"name": "dicething-v3",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 55580 --host",
		"dev:app": "BUILD_SPLASH_PAGE=false bun run dev",
		"dev:splash": "BUILD_SPLASH_PAGE=true bun run dev",
		"prebuild": "./scripts/git_info_to_dotenv.sh",
		"build": "vite build",
		"build:app": "BUILD_SPLASH_PAGE=false bun run build",
		"build:splash": "BUILD_SPLASH_PAGE=true bun run build",
		"preview": "vite preview",
		"preview:app": "BUILD_SPLASH_PAGE=false bun run preview -- build_app",
		"preview:splash": "BUILD_SPLASH_PAGE=true bun run preview -- build_splash",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"generate:fonts": "vite-node --options.transformMode.ssr='/.*/' src/lib/fonts/build_builtins.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@inlang/paraglide-js": "^2.0.0",
		"@lucide/svelte": "^0.503.0",
		"@skeletonlabs/skeleton-svelte": "^1.2.1",
		"@skeletonlabs/skeleton": "^3.1.3",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@types/node": "^22.15.12",
		"@types/three": "^0.176.0",
		"@types/xmldom": "^0.1.34",
		"bits-ui": "^1.4.3",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"eslint": "^9.18.0",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"opentype.js": "^1.3.4",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"prettier": "^3.4.2",
		"svelte-check": "^4.0.0",
		"svelte": "^5.0.0",
		"tailwindcss": "^4.0.0",
		"three": "^0.176.0",
		"typescript-eslint": "^8.20.0",
		"typescript": "^5.0.0",
		"vite-node": "^3.1.3",
		"vite": "^6.2.6",
		"vitest": "^3.0.0",
		"xmldom": "^0.6.0"
	}
}
